pipeline{
  environment{
      HOME = '.'
  }  
  agent {
      docker{
          image 'node:14-alpine'
      }
  }
  stages{

    stage('cache clean'){
        steps{
            sh 'npm cache clean --force'
        }
    }    
    stage('Build'){
      steps{
          sh 'npm run build'
      }  
    }
    stage('Test'){
      steps{
          sh 'npm run coverage'
      }  
    }
    stage('ESlint'){
      steps{
          sh 'npm run lint'
      }  
    }
}

}
