pipeline{
  agent {
      docker{
          image 'node:14-alpine'
      }
  }
  stages{
    stage('Installation'){
      steps{
          script{
            sh 'npm init'
          }
          }
      }
    stage('Build'){
      steps{
          sh 'npm run build'
      }  
    }
    stage('ESlint'){
      steps{
          echo "Third AKA Eslint step"
      }  
    }
}

}
