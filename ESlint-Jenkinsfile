pipeline{
  agent any
  environment{
    cluster_zone = 'asia-southeast1-c';
    cluster_name = credentials('cluster_name');
    project_id = credentials('project_id');
    repo_name = 'testapp';
  }
  tools {nodejs "node js"}
  stages{
    stage('Installation'){
      steps{
        script{
          sh 'npm install'
        }
      }
    }
    stage('Build'){
      steps{
        script{
          sh 'npm run build'
        }
      }  
    }
    stage('ESlint'){
      steps{
        script{
          sh 'npm run lint'
        }
      }  
    }
}
}
